<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.keshav.courtcounter.MainActivity"
    android:layout_gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="30dp"
                android:padding="4dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/team_A_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="48dp"
                android:text="0"
                android:gravity="center_horizontal"
                android:padding="4dp"/>
            <Button
                android:id="@+id/team_A_3points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3points"
                android:gravity="center"
                android:layout_margin="8dp"
                android:onClick="submit3p"/>
            <Button
                android:id="@+id/team_A_2points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2points"
                android:gravity="center"
                android:layout_margin="8dp"
                android:onClick="submit2p"/>
            <Button
                android:id="@+id/team_A_1points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                android:gravity="center"
                android:layout_margin="8dp"
                android:onClick="submitft"/>

        </LinearLayout>
        <View
            android:background="@android:color/darker_gray"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="30dp"
                android:padding="4dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/team_B_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="48dp"
                android:text="0"
                android:gravity="center_horizontal"
                android:padding="4dp"/>
            <Button
                android:id="@+id/team_B_3points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3points"
                android:gravity="center"
                android:layout_margin="8dp"
                android:onClick="submit3pB"/>
            <Button
                android:id="@+id/team_B_2points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2points"
                android:gravity="center"
                android:layout_margin="8dp"
                android:onClick="submit2pB"/>
            <Button
                android:id="@+id/team_B_1points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                android:gravity="center"
                android:layout_margin="8dp"
                android:onClick="submitftB"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="END"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="end"/>
    <Button
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/reset"
        android:onClick="reset"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="next"/>
</RelativeLayout>